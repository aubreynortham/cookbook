<% @recipe.errors.full_messages.each do |message| %>
<p><%= message %></p>
<% end %>


<%= form_for @recipe do |f| %>

<p>
  <%= f.label :dish %><br>
  <%= f.text_field :dish %>
</p>

<p>
  <%= f.label :instructions %><br>
  <%= f.text_area :instructions %>
</p>

<p>
  <%= f.submit class: "btn btn-primary" %>
</p>
<% end %>
